{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2022",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"jsx": "react",
		"strict": true,
		"lib": [
			"DOM",
			"ES2021"
		]
	},
	"include": [
		"**/*.ts",
		"**/*.tsx"
	]
}
